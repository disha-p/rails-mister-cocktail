<% if @cocktail.photo %>
 <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path @cocktail.photo %>');"">
<% else %>
  <div class= "banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= "https://unsplash.it/800/500" %>);">
<% end %>


  <div class="banner-content">
    <h1><%= @cocktail.name %></h1>
    <%= link_to "delete", cocktail_path, method: :delete, class: "btn btn-danger" %>
    <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), {class: "btn-btn-danger btn-lg"} %>
    <ul>
      <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %> of <%= dose.ingredient.name %>
       (<%= link_to "delete", cocktail_doses_path(@cocktail, dose), method: :delete %>)
      </li>
      <% end %>
    </ul>
  </div>
</div>




